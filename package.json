{
  "name": "book-directory",
  "version": "1.1.0",
  "description": "Pet project for a website repository for books and authors",
  "author": "Serhii Kuznietsov <sergeykyz19998@gmail.com>",
  "license": "ISC",
  "main": "index.js",
  "engines": {
    "npm": ">=8.6.0",
    "node": ">=22.0.0"
  },
  "keywords": [
    "web",
    "api",
    "node",
    "js",
    "fastify",
    "ajv",
    "jest",
    "swagger",
    "sequelize",
    "docker",
    "redis"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SerhiiKuznietsov/book-directory.git"
  },
  "homepage": "https://github.com/SerhiiKuznietsov/book-directory.git#readme",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "start:dev": "cross-env NODE_ENV=development nodemon index.js",

    "migration:create": "npx sequelize-cli migration:generate --name",
    "migrate:up": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",

    "seed:create": "npx sequelize-cli seed:generate --name",
    "seed:up": "npx sequelize-cli db:seed:all",
    "seed:undo": "npx sequelize-cli db:seed:undo",

    "test": "jest",
    "test:unit": "jest --config=jest.unit.config.js",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:coverage": "jest --coverage",

    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.2",
    "ajv": "^8.17.1",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "pg": "^8.14.0",
    "pg-hstore": "^2.3.4",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "redis": "^4.7.0",
    "sequelize": "^6.37.6",
    "underscore.string": "^3.3.6"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^9.22.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "sequelize-cli": "^6.6.2",
    "supertest": "^7.0.0"
  }
}
